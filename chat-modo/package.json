{
  "name": "moddeck-app",
  "version": "1.0.0",
  "description": "ModDeck - Application de modération de chat Twitch pour streamers et modérateurs",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "author": "fugu_fps",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.fugufps.moddeck",
    "productName": "ModDeck",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "style.css",
      "index.html",
      "*.png"
    ],
    "win": {
      "target": "nsis",
      "icon": "ModDeck.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}

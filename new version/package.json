{
  "name": "moddeck-v3",
  "version": "3.0.0",
  "description": "ModDeck v3 - Advanced Twitch Chat Widget with Comprehensive Moderation Tools",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build-portable": "electron-builder --dir",
    "build-zip": "electron-builder --win zip --linux tar.gz --mac zip",
    "build-installer": "electron-builder --win nsis",
    "build": "electron-builder --win",
    "pack": "electron-builder --dir"
  },
  "author": "fugu_fps",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "tmi.js": "^1.8.5",
    "electron-updater": "^6.1.7",
    "node-fetch": "^2.7.0"
  },
  "build": {
    "appId": "com.fugufps.moddeck-v3",
    "productName": "ModDeck v3",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "style.css",
      "index.html",
      "assets/**/*",
      "src/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "fugu_fps",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ModDeck",
      "displayLanguageSelector": false,
      "installerLanguages": ["en", "fr"],
      "language": "2052",
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": false,
      "include": "build/installer.nsh"
    },
    "linux": {
      "target": "tar.gz",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": "zip",
      "icon": "assets/icon.png"
    },
    "publish": {
      "provider": "github",
      "owner": "JaysonPasquier",
      "repo": "ModDeck"
    }
  }
}
